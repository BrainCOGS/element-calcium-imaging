{
	"name": "Environment + Data",
	"dockerComposeFile": "docker-compose.yaml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},
	"onCreateCommand": "mkdir -p ${IMAGING_ROOT_DATA_DIR} && pip install -e .",
	"postStartCommand": "docker volume prune -f && s3fs ${DJ_PUBLIC_S3_LOCATION} ${IMAGING_ROOT_DATA_DIR} -o nonempty,multipart_size=530,endpoint=us-east-1,url=http://s3.amazonaws.com,public_bucket=1",
	"hostRequirements": {
		"cpus": 4,
		"memory": "16gb",
		"storage": "32gb"
	},
	"forwardPorts": [
		3306
	],
	"customizations": {
		"settings": {
			"python.pythonPath": "/usr/local/bin/python"
		},
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	}
}